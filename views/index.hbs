<!-- REGISTRO MODAL -->
<div class="container-fluid">
<form action="" method="POST" id="FormRegistro">
    <div class="modal fade" id="RegistroModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content bg-grisClaro">
            <div class="modal-header bg-gradient border-0">
            <h2 class="modal-title" id="exampleModalLabel">registrate</h2>
            {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> --}}
            </div>
            <div class="modal-body">
                <label class="row g-3">
                    <div class="col-6">
                        <input type="text" class="form-control" name="nombre" placeholder="Nombre" required>
                    </div>
                    <div class="col-6">
                        <input type="text" class="form-control" name="apellido" placeholder="Apellido" required>
                    </div>
                </label>
                <label class="row">
                    <div class="col-12 my-3">
                        <input type="text" class="form-control" name="email" placeholder="E-Mail" required>
                        {{!-- <span class="text-success ps-4">{{emailRegistrado}}</span> --}}
                    </div>
                </label>
                <label class="row g-3">
                    <div class="col-6">
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>
                    <div class="col-6">
                        <input type="password" class="form-control" name="Re_claveUser" placeholder="Repetir Password" required>
                    </div>
                </label>
            </div>
            <div class="modal-footer border-0">
                <span class="text-dark">Ya estás registrado?
                    <span class="pe-2 ps-1"><a href="#" class="text-success" data-bs-toggle="modal" data-bs-target="#LoginModal" data-bs-dismiss="modal">Ingresar</a></span>
                </span>
                <button type="submit" value="registrarse" target="_self" class="btn btn-danger">REGISTRARME</button>
            </div>
        </div>
    </div>
    </div>
</form>
</div>

